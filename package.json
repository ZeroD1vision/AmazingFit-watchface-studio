{
  "name": "amazingfit-watchface-studio",
  "version": "0.1.0",
  "description": "Professional IDE and Simulator for AmazingFit/Huami watch faces",
  "author": "Your Name <your.email@example.com>",
  "license": "MIT",
  "private": true,
  "main": "dist/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "NODE_ENV=development electron .",
    "dev:web": "webpack serve --config config/webpack.renderer.config.js",
    "build": "npm run build:main && npm run build:renderer",
    "build:main": "webpack --config config/webpack.main.config.js",
    "build:renderer": "webpack --config config/webpack.renderer.config.js",
    "package": "electron-builder --linux",
    "package:all": "electron-builder --linux --windows --mac",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:e2e": "playwright test",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "format": "prettier --write \"src/**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "prepare": "husky install"
  },
  "dependencies": {
    "electron": "^25.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "monaco-editor": "^0.40.0",
    "socket.io": "^4.6.0",
    "express": "^4.18.0",
    "chokidar": "^3.5.0",
    "zustand": "^4.0.0",
    "immer": "^10.0.0"
  },
  "devDependencies": {
    "@electron-forge/cli": "^6.0.0",
    "webpack": "^5.0.0",
    "babel-loader": "^9.0.0",
    "jest": "^29.0.0",
    "eslint": "^8.0.0",
    "prettier": "^3.0.0",
    "husky": "^8.0.0",
    "lint-staged": "^13.0.0",
    "@testing-library/react": "^14.0.0",
    "@playwright/test": "^1.30.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,css,md}": [
      "prettier --write"
    ]
  }
}